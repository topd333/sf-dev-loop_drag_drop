<header>
	<div id="sessioninfo">
		<% if logged_in? %>
			Current User = <%= current_user.name %>, Organization = <%= current_user.organization.name %>
		<% else %>
			Not Logged In
		<% end %>
	</div>
	<nav>
		<ul>
			<% if logged_in? %>
				<% if current_user.soadmin? %>
					<li><%= link_to "Organizations", organizations_path %></li>
					---------
				<% end %>
				<% if current_user.orgadmin? or current_user.soadmin? %>
					<li><%= link_to "Users", users_path %></li>
					---------
				<% end %>
				<li><%= link_to "Players", players_path %></li>
				<li><%= link_to "Media Assets", media_assets_path %></li>
				<li><%= link_to "Loop Assets", loop_assets_path %></li>
				---------
				<li><%= link_to "Profile", current_user %></li>
				<li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
				<li><%= link_to "Log out", logout_path, method: "delete" %></li>
			<% else %>
				<li><%= link_to "Log in", login_path %></li>
			<% end %>
		</ul>
	</nav>
</header>
<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel"><%= title %></h4>
      </div>
      <div class="modal-body">
        <%= form_for @new_loop_asset do |f| %>
          <% if @new_loop_asset.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@new_loop_asset.errors.count, "error") %> prohibited this loop_asset from being saved:</h2>
              <ul>
              <% @new_loop_asset.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <%= f.label :displayname, "Loop Display Name" %><br>
            <%= f.text_field :displayname %>
          </div>
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <%= f.submit 'OK', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  </div>
</div>

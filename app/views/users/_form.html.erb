<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	<br/>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<br/>
	<%= f.label :password %>
	<%= f.password_field :password %>
	Leave Blank for no change
	<br/>
	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation %>
	Leave Blank for no change
	<br/>
	<%= f.label :default_slide_duration, "Default duration for slide" %>
	<%= f.text_field :default_slide_duration %>
	<br/>
	<% if current_user.orgadmin? && !current_user?(@user) %>
		<%= f.label :orgadmin, "Is Organization Administrator" %>
		<%= f.check_box :orgadmin %>
		<br/>
	<% end %>
	<%= f.submit "Save changes" %>
<% end %>
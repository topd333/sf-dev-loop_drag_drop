<%= render partial: 'admin/shared/admin_nav' %>
<h1>Listing admin_pay_programs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Available</th>
      <th>Period</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_pay_programs.each do |admin_pay_program| %>
      <tr>
        <td><%= admin_pay_program.name %></td>
        <td><%= admin_pay_program.description %></td>
        <td><%= admin_pay_program.price %></td>
        <td><%= admin_pay_program.available %></td>
        <td><%= admin_pay_program.period %></td>
        <td><%= link_to 'Show', admin_pay_program %></td>
        <td><%= link_to 'Edit', edit_admin_pay_program_path(admin_pay_program) %></td>
        <td><%= link_to 'Destroy', admin_pay_program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pay program', new_admin_pay_program_path %>
